<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.EOD">

    <ScrollView
        android:id="@+id/scrollViewEOD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/innerEODLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sheetNumEODLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewSheetNumEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="@string/sheet_num"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewSelectedSheetNumEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:hint="@string/selected_sheet_num"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_tiny"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/dateEODLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/silver_blue"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewDateEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="@string/date"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDisplayDateEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".63"
                    android:hint="@string/dd_mm_yyyy"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationCodeEODLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">


                <TextView
                    android:id="@+id/textViewlocationCodeEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="@string/location_code"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewSelectedlocationCodeEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:hint="@string/selected_location_code"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_tiny"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/locationNameEODLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">


                <TextView
                    android:id="@+id/textViewlocationNameEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="@string/location_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewSelectedlocationNameEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:hint="@string/selected_location_name"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_tiny"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/regionEODLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">


                <TextView
                    android:id="@+id/textViewRegionEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="@string/region"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewSelectedRegionEOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:hint="@string/selected_region"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black"
                    android:padding="@dimen/padding_tiny"/>


            </LinearLayout>


                <TextView
                    android:id="@+id/textViewLOMQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/silver_blue"
                    android:text="@string/lom_question"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_tiny_upper"
                    android:padding="@dimen/padding_tiny_upper"/>

                <RadioGroup
                    android:id="@+id/radioGroupLOMQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/silver_blue"
                    android:paddingLeft="@dimen/padding_tiny_upper"
                    android:paddingRight="@dimen/padding_tiny_upper">

                    <RadioButton
                        android:id="@+id/radioButtonYes"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:text="@string/yes"
                        android:textColor="@color/black"
                        android:onClick="onRadioButtonClick"/>

                    <RadioButton
                        android:id="@+id/radioButtonNo"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="match_parent"
                        android:text="@string/no"
                        android:textColor="@color/black"
                        android:onClick="onRadioButtonClick"/>

                </RadioGroup>


            <LinearLayout
                android:id="@+id/endOfDayYesButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper"
                android:layout_marginTop="@dimen/margin_tiny_upper">

                <LinearLayout
                    android:id="@+id/volumeEODLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/silver_blue"
                    android:padding="@dimen/padding_tiny_upper">

                    <TextView
                        android:id="@+id/textViewVolumeEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="@string/volume"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/editTextVolumeEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:hint="@string/volume_range"
                        android:textColorHint="@color/gray_purple"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:inputType="numberSigned|numberDecimal"
                        android:padding="@dimen/padding_tiny" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fatEODLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/silver_blue"
                    android:padding="@dimen/padding_tiny_upper">

                    <TextView
                        android:id="@+id/textViewFatEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="@string/fat"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/editTextFatEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:hint="@string/fat_range"
                        android:textColorHint="@color/gray_purple"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:inputType="number|numberDecimal"
                        android:padding="@dimen/padding_tiny"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrReadingEODLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/silver_blue"
                    android:padding="@dimen/padding_tiny_upper">

                    <TextView
                        android:id="@+id/textViewLRReadingEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="@string/lr_reading"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/editTextLRReadingEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:hint="@string/lr_reading_range"
                        android:textColorHint="@color/gray_purple"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:inputType="number|numberDecimal"
                        android:padding="@dimen/padding_tiny"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/temperatureEODLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/silver_blue"
                    android:padding="@dimen/padding_tiny_upper">

                    <TextView
                        android:id="@+id/textViewTemperatureEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="@string/temperature"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/editTextTemperatureEOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:hint="@string/temperature_range"
                        android:textColorHint="@color/gray_purple"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:inputType="number|numberDecimal"
                        android:padding="@dimen/padding_tiny" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>