<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/mrnNumLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/silver_blue"
        android:padding="@dimen/padding_tiny_upper"
        android:baselineAligned="true">

        <TextView
            android:id="@+id/textViewMRN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="@string/mrn_num"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewSelectedMRN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:hint="@string/selected_mrn"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/silver_blue"
        android:padding="@dimen/padding_tiny_upper">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/textViewDisplayDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/dd_mm_yyyy"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/black"
            android:layout_weight=".3" />

        <TextView
            android:id="@+id/textViewUpdatingTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight=".2" />

        <TextView
            android:id="@+id/textViewDisplayTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hr_min_sec"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/black"
            android:layout_weight=".3" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewUpdateInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_information"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/black"
        android:layout_margin="@dimen/margin_two_minute"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/updateReasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/silver_blue"
        android:padding="@dimen/padding_tiny_upper">

        <TextView
            android:id="@+id/textViewupdateReason"
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:text="@string/update_reason"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/spinnerUpdateReason"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="@dimen/padding_tiny"
            android:entries="@array/update_reason_array"
            android:popupBackground="@color/sky_blue"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/remarksLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/silver_blue"
        android:padding="@dimen/padding_tiny_upper">

        <TextView
            android:id="@+id/textViewRemarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:text="@string/remarks"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextRemarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textColorHint="@color/gray_purple"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="@dimen/padding_tiny"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideInset"/>

    </LinearLayout>

</LinearLayout>