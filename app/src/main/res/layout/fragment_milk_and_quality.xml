<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.MilkAndQuality">

    <ScrollView
        android:id="@+id/scrollViewMAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutMAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/sheetNumAndLocationCodeMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper"
                android:baselineAligned="true">

                <TextView
                    android:id="@+id/textViewSheetNumMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".25"
                    android:layout_height="wrap_content"
                    android:text="@string/sheet_num"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewSelectedSheetNumMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:hint="@string/selected_sheet_num"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textViewLocationCodeMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content"
                    android:text="@string/location_code"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewSelectedLocationCodeMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:layout_height="wrap_content"
                    android:hint="@string/selected_location_code"
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/black" />

            </LinearLayout>


            <TextView
                android:id="@+id/textViewMilkMeasurementsMAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/milk_measurements"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_two_minute"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/volumeMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewVolumeMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="@string/volume"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextVolumeMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:hint="@string/volume_range"
                    android:textColorHint="@color/gray_purple"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="numberSigned|numberDecimal"
                    android:padding="@dimen/padding_tiny" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fatMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewFatMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="@string/fat"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextFatMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:hint="@string/fat_range"
                    android:textColorHint="@color/gray_purple"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="number|numberDecimal"
                    android:padding="@dimen/padding_tiny"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lrReadingMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewLRReadingMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="@string/lr_reading"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextLRReadingMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:hint="@string/lr_reading_range"
                    android:textColorHint="@color/gray_purple"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="number|numberDecimal"
                    android:padding="@dimen/padding_tiny"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/temperatureMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewTemperatureMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="@string/temperature"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/editTextTemperatureMAQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:hint="@string/temperature_range"
                    android:textColorHint="@color/gray_purple"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:inputType="number|numberDecimal"
                    android:padding="@dimen/padding_tiny" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewQualityMeasurementsMAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quality_measurements"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_two_minute"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/organolMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewOrganolMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:text="@string/organol_in_out"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/spinnerOrganolMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:padding="@dimen/padding_tiny"
                    android:entries="@array/organol"
                    android:popupBackground="@color/sky_blue"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/formalinMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewformalinMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:text="@string/formalin"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/spinnerFormalinMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:padding="@dimen/padding_tiny"
                    android:entries="@array/formalin"
                    android:popupBackground="@color/sky_blue"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/APTMAQLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/silver_blue"
                android:padding="@dimen/padding_tiny_upper">

                <TextView
                    android:id="@+id/textViewAPTMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:text="@string/apt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/spinnerAPTMAQ"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:padding="@dimen/padding_tiny"
                    android:entries="@array/APT"
                    android:popupBackground="@color/sky_blue"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

